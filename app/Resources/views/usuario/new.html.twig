{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="center">Crear Usuario</h1>

    {{ form_start(form) }}
    <div class="container">
      <div class="row">
        <div class="input-field col s6">
          {{ form_label(form.nombre)}}
          {{ form_widget(form.nombre) }}
          {{ form_errors(form.nombre)}}
        </div>
        <div class="input-field col s6">
            {{ form_label(form.apellidoPaterno)}}
            {{ form_widget(form.apellidoPaterno)}}
            {{ form_errors(form.apellidoPaterno)}}
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          {{ form_label(form.apellidoMaterno)}}
          {{ form_widget(form.apellidoMaterno)}}
          {{ form_errors(form.apellidoMaterno)}}
        </div>
        <div class="input-field col s6">
          {{ form_label(form.edad)}}
          {{ form_widget(form.edad)}}
          {{ form_errors(form.edad)}}
        </div>
      </div>
    </div>

    <div class="fixed-action-btn horizontal">
      <a class="btn-floating btn-large grey darken-2 pulse">
        <i class="material-icons">more</i>
      </a>
      <ul>
        <li><a  href="{{ path('usuario_index') }}" class="btn-floating grey darken-2"><i class="material-icons">backspace</i></a></li>
        <li><button type="submit" class="btn-floating waves-effect waves-light grey darken-2"><i class="material-icons">send</i></button></li>
      </ul>
    </div>
    {{ form_end(form) }}
{% endblock %}
