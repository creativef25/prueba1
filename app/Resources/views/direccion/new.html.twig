{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="center">Crear Direccion</h1>

    {{ form_start(form) }}

    <div class="container">
      <div class="row">
        <div class="input-field col s6">
          {{ form_label(form.calle)}}
          {{ form_widget(form.calle)}}
          {{ form_errors(form.calle)}}
        </div>
        <div class="input-field col s6">
          {{ form_label(form.colonia)}}
          {{ form_widget(form.colonia)}}
          {{ form_errors(form.colonia)}}
        </div>

      </div>
      <div class="row">
        <div class="input-field col s6">
          {{ form_label(form.delegacion)}}
          {{ form_widget(form.delegacion)}}
          {{ form_errors(form.delegacion)}}
        </div>
        <div class="input-field col s6">
          {{ form_label(form.numero)}}
          {{ form_widget(form.numero)}}
          {{ form_errors(form.numero)}}
        </div>
      </div>
      <div class="row">
        <div class="">
          {{ form_label(form.usuarios)}}
          {{ form_widget(form.usuarios)}}
          {{ form_errors(form.usuarios)}}
        </div>

      </div>
    </div>

    <div class="fixed-action-btn horizontal">
      <a class="btn-floating btn-large grey darken-2 pulse">
        <i class="material-icons">more</i>
      </a>
      <ul>
        <li><a  href="{{ path('direccion_index') }}" class="btn-floating grey darken-2"><i class="material-icons">backspace</i></a></li>
        <li><button type="submit" value="Create" class="btn-floating waves-effect waves-light grey darken-2"><i class="material-icons">send</i></button></li>
      </ul>
    </div>

    {{ form_end(form) }}

{% endblock %}
