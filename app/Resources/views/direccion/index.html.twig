{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="center">Direcciones</h1>

  <div class="container">
    <table class="striped grey lighten-2 centered responsive-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Calle</th>
                <th>Colonia</th>
                <th>Delegacion</th>
                <th>Numero</th>
                <th>Usuario</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for direccion in direccions %}
            <tr>
                <td><a href="{{ path('direccion_show', { 'id': direccion.id }) }}">{{ direccion.id }}</a></td>
                <td>{{ direccion.calle }}</td>
                <td>{{ direccion.colonia }}</td>
                <td>{{ direccion.delegacion }}</td>
                <td>{{ direccion.numero }}</td>
                <td>{{ direccion.usuarios}}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('direccion_show', { 'id': direccion.id }) }}"><i class="material-icons">visibility</i>Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('direccion_edit', { 'id': direccion.id }) }}"><i class="material-icons">edit</i>Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>

  <div class="fixed-action-btn">
      <a href="{{ path('direccion_new') }}" class="btn-floating right btn-large waves-effect waves-light black pulse"><i class="medium material-icons">add</i></a>
  </div>

{% endblock %}
